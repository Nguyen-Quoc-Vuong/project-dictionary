<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<VBox stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.YourController">
    <HBox>
        <!-- Word and phonetics -->
        <Label fx:id="wordLabel" text="Communication" styleClass="word-header"/>
        <Button fx:id="ukPronounceButton" styleClass="icon-button" />
        <Button fx:id="usPronounceButton" styleClass="icon-button" />
    </HBox>
    <VBox>
        <!-- Definitions and examples -->
        <Label text="1. the imparting or exchanging of information or news." styleClass="definition-text"/>
        <Label text="“at the moment I am in communication with London”" styleClass="example-text"/>
        <!-- Synonyms -->
        <HBox>
            <Label text="Synonyms: " styleClass="synonyms-label"/>
            <Label text="transmission, imparting, ..." styleClass="synonyms-text"/>
        </HBox>
    </VBox>
    <!-- Repeat for other definitions -->
</VBox>
