<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="570.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.GameController">
    <AnchorPane stylesheets="@../style/game.css">
        <VBox alignment="CENTER" layoutX="229.0" layoutY="79.0" prefHeight="320.0" prefWidth="351.0" spacing="30">
            <Label fx:id="questionLabel" maxWidth="600" style="-fx-alignment: center;" styleClass="question-label" text="Question" wrapText="true" />
            <HBox spacing="30">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <Button fx:id="answer1" maxHeight="60.0" maxWidth="120.0" minHeight="60.0" minWidth="120.0" onAction="#answer1Clicked" prefHeight="60.0" prefWidth="120.0" styleClass="answer-button" text="Answer 1" />
                <Button fx:id="answer2" maxHeight="60.0" maxWidth="120.0" minHeight="60.0" minWidth="120.0" onAction="#answer2Clicked" prefHeight="60.0" prefWidth="120.0" styleClass="answer-button" text="Answer 2" />
            </HBox>
            <HBox spacing="30">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <Button fx:id="answer3" maxHeight="60.0" maxWidth="120.0" minHeight="60.0" minWidth="120.0" onAction="#answer3Clicked" prefHeight="60.0" prefWidth="120.0" styleClass="answer-button" text="Answer 3" />
                <Button fx:id="answer4" maxHeight="60.0" maxWidth="120.0" minHeight="60.0" minWidth="120.0" onAction="#answer4Clicked" prefHeight="60.0" prefWidth="120.0" styleClass="answer-button" text="Answer 4" />
            </HBox>
        </VBox>
        <Label fx:id="checkAnswer" layoutX="344.0" layoutY="393.0" prefHeight="39.0" prefWidth="71.0" styleClass="feedback-label" text="Check" />
        <Label fx:id="rightAnswer" layoutX="526.0" layoutY="118.0" prefHeight="31.0" prefWidth="107.0" styleClass="correct-answer-label" />
    </AnchorPane>
</StackPane>
